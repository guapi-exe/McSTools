{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "MCSTools",
  "version": "1.2.4",
  "identifier": "mcSchematic",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "MCS",
        "width": 1400,
        "height": 750,
        "minWidth": 1000,
        "minHeight": 600,
        "center": true,
        "visible": false,
        "decorations": true,
        "dragDropEnabled": false
      },
      {
        "fullscreen": false,
        "height":128,
        "resizable": false,
        "title": "Loading",
        "width": 256,
        "alwaysOnTop": true,
        "visible": true,
        "center": true,
        "decorations": false,
        "label": "splashscreen",
        "url": "data/splashscreen.html"
      }
    ],
    "security": {
      "csp": {
        "default-src": "'self' customprotocol: asset: http://asset.localhost blob: data: https:",
        "connect-src": "ipc: http://ipc.localhost",
        "img-src": "'self' asset: http://asset.localhost blob: data: https:",
        "style-src": "'unsafe-inline' 'self' asset: http://asset.localhost"
      },
      "assetProtocol": {
        "enable" : true,
        "scope": {
          "allow": [
            "$APPDATA/**",
            "$APPLOCALDATA/**",
            "$RESOURCE/**"
          ]
        }
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "createUpdaterArtifacts": true,
    "resources": [
      "data/**/*",
      "data/resource/*",
      "../dist/**/*"
    ],
    "windows": {
      "wix": {
        "language": "zh-CN"
      },
      "nsis": {
        "languages": ["SimpChinese", "English"],
        "displayLanguageSelector": true
      }
    }
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEZFRDk1MkYyRkI5MEUyRjUKUldUMTRwRDc4bExaL3NwUTI3aSt5VitSS214OXpPc25vSUJjMWwrWnhCems0T3RmWkxhZDl1OEkK",
      "endpoints": [
        "https://github.com/guapi-exe/McSTools/releases/download/updater/latest.json",
        "https://ghcr.mcschematic.top/https://github.com/guapi-exe/McSTools/releases/download/updater/latest.json"
      ],
      "windows": {
        "installMode": "passive"
      }
    }
  }
}
